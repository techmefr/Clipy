{
  "manifest_version": 3,
  "name": "Clipy",
  "description": "Copy GitLab links to Discord with one click",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Clipy - GitLab to Discord",
    "default_icon": {
      "16": "icons/clipy-16.png",
      "32": "icons/clipy-32.png",
      "48": "icons/clipy-48.png",
      "128": "icons/clipy-128.png"
    }
  },
  "icons": {
    "16": "icons/clipy-16.png",
    "32": "icons/clipy-32.png", 
    "48": "icons/clipy-48.png",
    "128": "icons/clipy-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"]
  }]
}